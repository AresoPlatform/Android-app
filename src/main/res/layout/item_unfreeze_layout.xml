<?xml version="1.0" encoding="utf-8"?>
<com.lihang.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:hl_cornerRadius="@dimen/dp_12"
    app:hl_leftShow="false"
    app:hl_rightShow="false"
    app:hl_shadowColor="@color/bg_color_shadow"
    app:hl_shadowLimit="@dimen/dp_10"
    app:hl_topShow="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_13"
        android:paddingTop="@dimen/dp_15"
        android:paddingRight="@dimen/dp_13"
        android:paddingBottom="@dimen/dp_13">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.xw.aschwitkey.view.TypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="接收账户"
                android:textColor="@color/main1"
                android:textSize="@dimen/sp_12"
                app:typeface="heavy" />

            <com.xw.aschwitkey.view.TypefaceTextView
                android:id="@+id/mTextView_btn_unfreeze"
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/selector_btn_red_12dp"
                android:gravity="center"
                android:padding="@dimen/dp_3"
                android:text="解冻"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                app:typeface="heavy" />

            <com.xw.aschwitkey.view.TypefaceTextView
                android:id="@+id/mTextView_notFreezeTime"
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_bg_freeze_12dp"
                android:gravity="center"
                android:padding="@dimen/dp_3"
                android:text="未到解冻时间"
                android:textColor="@color/TextColor6"
                android:textSize="@dimen/sp_11"
                app:typeface="regular" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginBottom="@dimen/dp_13">

            <com.xw.aschwitkey.view.TypefaceTextView
                android:id="@+id/mTextView_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="TDwwpfGM...j2pPMYoCe"
                android:textColor="@color/TextColor1"
                android:textSize="@dimen/sp_12"
                app:typeface="regular" />

            <ImageView
                android:id="@+id/mImageView_copy"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_toRightOf="@id/mTextView_address"
                android:src="@mipmap/copy" />

            <com.xw.aschwitkey.view.TypefaceTextView
                android:id="@+id/mTextView_isCurrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="当前账户"
                android:textColor="@color/TextColor6"
                android:textSize="@dimen/sp_11"
                app:typeface="regular" />

        </RelativeLayout>

        <com.xw.aschwitkey.view.TypefaceTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@drawable/shape_line_stroke" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_13">

            <com.xw.aschwitkey.view.TypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="资源类型"
                android:textColor="@color/TextColor1"
                android:textSize="@dimen/sp_12"
                app:typeface="regular" />

            <com.xw.aschwitkey.view.TypefaceTextView
                android:id="@+id/mTextView_freezeType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="带宽"
                android:textColor="@color/main1"
                android:textSize="@dimen/sp_12"
                app:typeface="regular" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_13">

            <com.xw.aschwitkey.view.TypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="冻结数量（TRX）"
                android:textColor="@color/TextColor1"
                android:textSize="@dimen/sp_12"
                app:typeface="regular" />

            <com.xw.aschwitkey.view.TypefaceTextView
                android:id="@+id/mTextView_freezeTrx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="0"
                android:textColor="@color/main1"
                android:textSize="@dimen/sp_12"
                app:typeface="regular" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_13">

            <com.xw.aschwitkey.view.TypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可解冻时间"
                android:textColor="@color/TextColor1"
                android:textSize="@dimen/sp_12"
                app:typeface="regular" />

            <com.xw.aschwitkey.view.TypefaceTextView
                android:id="@+id/mTextView_unfreezeTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2020/10/16 15:34:30"
                android:textColor="@color/main1"
                android:textSize="@dimen/sp_12"
                app:typeface="regular" />

        </RelativeLayout>

    </LinearLayout>

</com.lihang.ShadowLayout>
