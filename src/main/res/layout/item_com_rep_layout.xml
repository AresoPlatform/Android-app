<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_13">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_13"
        android:paddingRight="@dimen/dp_13">

        <com.xw.aschwitkey.view.CircleImageView
            android:id="@+id/mImageView_head"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@mipmap/default_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/mImageView_head"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.xw.aschwitkey.view.TypefaceTextView
                    android:id="@+id/mTextView_commentName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="icebing925"
                    android:textColor="@color/text_bg"
                    android:textSize="@dimen/sp_14" />

                <com.xw.aschwitkey.view.TypefaceTextView
                    android:id="@+id/mTextView_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="回复你"
                    android:textColor="@color/text_bg_gray"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <com.xw.aschwitkey.view.TypefaceTextView
                android:id="@+id/mTextView_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="2019年05月18日 21:30"
                android:textColor="@color/TextColor1"
                android:textSize="@dimen/sp_11" />

        </LinearLayout>

        <com.xw.aschwitkey.view.TypefaceTextView
            android:id="@+id/mTextView_btn_reply"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_btn_blue_11dp"
            android:gravity="center"
            android:text="回复"
            android:textColor="@color/text_bg"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>

    <com.xw.aschwitkey.view.TypefaceTextView
        android:id="@+id/mTextView_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_13"
        android:paddingLeft="@dimen/dp_13"
        android:paddingRight="@dimen/dp_13"
        android:text="最新的一条评论"
        android:textColor="@color/text_bg_gray"
        android:textSize="@dimen/sp_12"
        app:typeface="regular" />

    <LinearLayout
        android:id="@+id/mLinearLayout_blog"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_margin="@dimen/dp_13"
        android:background="@drawable/shape_gray_radius_6dp"
        android:orientation="horizontal">

        <com.xw.aschwitkey.view.UpRoundImageView
            android:id="@+id/mUpRoundImageView_cover"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:visibility="gone"
            app:left_bottom_radius="@dimen/dp_6"
            app:left_top_radius="@dimen/dp_6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.xw.aschwitkey.view.TypefaceTextView
                android:id="@+id/mTextView_permlinkAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jesterjian"
                android:textColor="@color/text_bg"
                android:textSize="@dimen/sp_14" />

            <com.xw.aschwitkey.view.TypefaceTextView
                android:id="@+id/mTextView_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="植物园的光景"
                android:textColor="@color/text_bg_gray"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mLinearLayout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_13"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_13"
        android:paddingRight="@dimen/dp_13"
        android:visibility="gone">

        <com.xw.aschwitkey.view.TypefaceTextView
            android:id="@+id/mTextView_commentContentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jesterjian"
            android:textColor="@color/text_bg"
            android:textSize="@dimen/sp_12" />

        <com.xw.aschwitkey.view.TypefaceTextView
            android:id="@+id/mTextView_commentContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="：厉害，都能说出花名！！膜拜大神"
            android:textColor="@color/text_bg_gray"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

    <TextView
        android:id="@+id/mTextView_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/bg_color" />

</LinearLayout>
