<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/mRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_13"
                    android:paddingRight="@dimen/dp_13">

                    <com.lihang.ShadowLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hl_cornerRadius="@dimen/dp_12"
                        app:hl_leftShow="false"
                        app:hl_rightShow="false"
                        app:hl_shadowColor="@color/bg_color_shadow"
                        app:hl_shadowLimit="@dimen/dp_10"
                        app:hl_topShow="false">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_40"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:id="@+id/mRelativeLayout_privateKey"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/dp_20"
                                        android:layout_height="@dimen/dp_20"
                                        android:src="@mipmap/icon_mi" />

                                    <com.xw.aschwitkey.view.TypefaceTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_13"
                                        android:text="导出私钥"
                                        android:textColor="@color/text_bg_gray"
                                        android:textSize="@dimen/sp_12"
                                        app:typeface="regular" />
                                </LinearLayout>

                                <TextView
                                    android:layout_width="@dimen/dp_0_5"
                                    android:layout_height="@dimen/dp_16"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:background="@color/TextColor6" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/mRelativeLayout_delete"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/dp_20"
                                        android:layout_height="@dimen/dp_20"
                                        android:src="@mipmap/icon_deleted" />

                                    <com.xw.aschwitkey.view.TypefaceTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_13"
                                        android:text="删除账户"
                                        android:textColor="@color/text_bg_gray"
                                        android:textSize="@dimen/sp_12"
                                        app:typeface="regular" />
                                </LinearLayout>

                                <TextView
                                    android:layout_width="@dimen/dp_0_5"
                                    android:layout_height="@dimen/dp_16"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:background="@color/TextColor6" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/mRelativeLayout_import"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/dp_20"
                                        android:layout_height="@dimen/dp_20"
                                        android:src="@mipmap/icon_import" />

                                    <com.xw.aschwitkey.view.TypefaceTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_13"
                                        android:text="新建/导入"
                                        android:textColor="@color/text_bg_gray"
                                        android:textSize="@dimen/sp_12"
                                        app:typeface="regular" />
                                </LinearLayout>

                            </RelativeLayout>

                        </LinearLayout>

                    </com.lihang.ShadowLayout>

                    <com.lihang.ShadowLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        app:hl_cornerRadius="@dimen/dp_12"
                        app:hl_leftShow="false"
                        app:hl_rightShow="false"
                        app:hl_shadowColor="@color/bg_color_shadow"
                        app:hl_shadowLimit="@dimen/dp_10"
                        app:hl_topShow="false">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_140"
                            android:background="@mipmap/wallet_tron">

                            <RelativeLayout
                                android:id="@+id/mRelativeLayout_top"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.xw.aschwitkey.view.TypefaceTextView
                                    android:id="@+id/mTextView_account"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:layout_marginTop="@dimen/dp_13"
                                    android:textColor="#ccffffff"
                                    android:textSize="@dimen/sp_17"
                                    app:typeface="heavy" />

                                <com.xw.aschwitkey.view.TypefaceTextView
                                    android:id="@+id/mTextView_btn_switch"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/dp_24"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="@dimen/dp_20"
                                    android:layout_marginRight="@dimen/dp_m_1"
                                    android:background="@drawable/selector_button_white_switch"
                                    android:gravity="center"
                                    android:paddingLeft="@dimen/dp_10"
                                    android:paddingRight="@dimen/dp_10"
                                    android:text="切换账户"
                                    android:textColor="#ffffff"
                                    android:textSize="@dimen/dp_12"
                                    app:typeface="medium" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/mRelativeLayout_copy"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/mRelativeLayout_top"
                                android:layout_marginTop="@dimen/dp_13"
                                android:visibility="gone">

                                <com.xw.aschwitkey.view.TypefaceTextView
                                    android:id="@+id/mTextView_address"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:layout_marginRight="@dimen/dp_10"
                                    android:textColor="#ccffffff"
                                    android:textSize="@dimen/sp_12"
                                    app:typeface="medium" />

                                <ImageView
                                    android:layout_width="@dimen/dp_20"
                                    android:layout_height="@dimen/dp_20"
                                    android:layout_toRightOf="@id/mTextView_address"
                                    android:src="@mipmap/icon_copy_w" />
                            </RelativeLayout>

                            <com.xw.aschwitkey.view.TypefaceTextView
                                android:id="@+id/mTextView_trx"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginRight="@dimen/dp_25"
                                android:layout_marginBottom="@dimen/dp_17"
                                android:text="？ TRX"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_24"
                                app:typeface="impact" />
                        </RelativeLayout>

                    </com.lihang.ShadowLayout>

                    <RelativeLayout
