                        android:layout_height="@dimen/dp_115"
                        android:layout_marginTop="@dimen/dp_13">

                        <com.xw.aschwitkey.view.TypefaceTextView
                            android:id="@+id/mTextView_btn_freeze"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_85"
                            android:layout_below="@id/mShadowLayout_top_resource"
                            android:layout_marginTop="@dimen/dp_m_30"
                            android:background="@drawable/selector_btn_red_12dp"
                            android:gravity="center"
                            android:paddingTop="@dimen/dp_18"
                            android:text="冻结/解冻"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_14"
                            app:typeface="medium" />

                        <com.lihang.ShadowLayout
                            android:id="@+id/mShadowLayout_top_resource"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hl_cornerRadius="@dimen/dp_12"
                            app:hl_leftShow="false"
                            app:hl_rightShow="false"
                            app:hl_shadowColor="@color/bg_color_shadow"
                            app:hl_shadowLimit="@dimen/dp_10"
                            app:hl_topShow="false">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_70"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <com.xw.aschwitkey.view.TypefaceTextView
                                        android:id="@+id/mTextView_bandwidth"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="？"
                                        android:textColor="@color/main4"
                                        android:textSize="@dimen/sp_14"
                                        app:typeface="impact" />

                                    <com.xw.aschwitkey.view.TypefaceTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="带宽"
                                        android:textColor="@color/main4"
                                        android:textSize="@dimen/sp_14"
                                        app:typeface="regular" />

                                </LinearLayout>

                                <TextView
                                    android:layout_width="@dimen/dp_0_5"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="@dimen/dp_13"
                                    android:layout_marginBottom="@dimen/dp_13"
                                    android:background="@color/TextColor6" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <com.xw.aschwitkey.view.TypefaceTextView
                                        android:id="@+id/mTextView_energy"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="？"
                                        android:textColor="@color/main4"
                                        android:textSize="@dimen/sp_14"
                                        app:typeface="impact" />

                                    <com.xw.aschwitkey.view.TypefaceTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="能量"
                                        android:textColor="@color/main4"
                                        android:textSize="@dimen/sp_14"
                                        app:typeface="regular" />

                                </LinearLayout>

                            </LinearLayout>

                        </com.lihang.ShadowLayout>

                    </RelativeLayout>

                    <com.lihang.ShadowLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        app:hl_cornerRadius="@dimen/dp_12"
                        app:hl_leftShow="false"
                        app:hl_rightShow="false"
                        app:hl_shadowColor="@color/bg_color_shadow"
                        app:hl_shadowLimit="@dimen/dp_10"
                        app:hl_topShow="false">

                        <RelativeLayout
                            android:id="@+id/mRelativeLayout_trx"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_60">

                            <ImageView
                                android:id="@+id/mImageView_trx"
                                android:layout_width="@dimen/dp_40"
                                android:layout_height="@dimen/dp_40"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dp_17"
                                android:layout_marginRight="@dimen/dp_13"
                                android:src="@mipmap/icon_trx" />

                            <com.xw.aschwitkey.view.TypefaceTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/mImageView_trx"
                                android:text="TRX"
                                android:textColor="@color/main4"
                                android:textSize="@dimen/sp_15"
                                app:typeface="medium" />

                            <com.xw.aschwitkey.view.TypefaceTextView
                                android:id="@+id/mTextView_trx_bottom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/dp_20"
                                android:text="？"
                                android:textColor="@color/main4"
                                android:textSize="@dimen/sp_15"
                                app:typeface="medium" />

                        </RelativeLayout>

                    </com.lihang.ShadowLayout>

                    <com.lihang.ShadowLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:visibility="gone"
                        app:hl_cornerRadius="@dimen/dp_12"
                        app:hl_leftShow="false"
                        app:hl_rightShow="false"
                        app:hl_shadowColor="@color/bg_color_shadow"
                        app:hl_shadowLimit="@dimen/dp_10"
                        app:hl_topShow="false">

                        <RelativeLayout
                            android:id="@+id/mRelativeLayout_ap"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_60">

                            <ImageView
                                android:id="@+id/mImageView_Txas"
                                android:layout_width="@dimen/dp_40"
                                android:layout_height="@dimen/dp_40"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dp_17"
                                android:layout_marginRight="@dimen/dp_13"
                                android:src="@mipmap/icon_ap" />

                            <com.xw.aschwitkey.view.TypefaceTextView
                                android:id="@+id/mTextView_ap_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/mImageView_Txas"
                                android:text="AP"
                                android:textColor="@color/main4"
                                android:textSize="@dimen/sp_15"
                                app:typeface="medium" />

                            <ImageView
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/sp_16"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:layout_toRightOf="@id/mTextView_ap_text"
                                android:src="@mipmap/icon_new" />

                            <com.xw.aschwitkey.view.TypefaceTextView
                                android:id="@+id/mTextView_TXas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/dp_20"
                                android:text="0.000"
                                android:textColor="@color/main4"
                                android:textSize="@dimen/sp_15"
                                app:typeface="medium" />

                        </RelativeLayout>

                    </com.lihang.ShadowLayout>

                    <com.lihang.ShadowLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        app:hl_cornerRadius="@dimen/dp_12"
                        app:hl_leftShow="false"
                        app:hl_rightShow="false"
                        app:hl_shadowColor="@color/bg_color_shadow"
                        app:hl_shadowLimit="@dimen/dp_10"
                        app:hl_topShow="false">

                        <RelativeLayout
                            android:id="@+id/mRelativeLayout_aso"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_60">

                            <ImageView
                                android:id="@+id/mImageView_aso"
                                android:layout_width="@dimen/dp_40"
                                android:layout_height="@dimen/dp_40"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dp_17"
                                android:layout_marginRight="@dimen/dp_13"
                                android:src="@mipmap/icon_aso" />

                            <com.xw.aschwitkey.view.TypefaceTextView
                                android:id="@+id/mTextView_aso_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/mImageView_aso"
                                android:text="ASO"
                                android:textColor="@color/main4"
                                android:textSize="@dimen/sp_15"
                                app:typeface="medium" />

                            <ImageView
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/sp_16"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:layout_toRightOf="@id/mTextView_aso_text"
                                android:src="@mipmap/icon_new" />

                            <com.xw.aschwitkey.view.TypefaceTextView
                                android:id="@+id/mTextView_aso"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/dp_20"
                                android:text="？"
                                android:textColor="@color/main4"
                                android:textSize="@dimen/sp_15"
                                app:typeface="medium" />

                        </RelativeLayout>

                    </com.lihang.ShadowLayout>

                    <com.lihang.ShadowLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        app:hl_cornerRadius="@dimen/dp_12"
                        app:hl_leftShow="false"
                        app:hl_rightShow="false"
                        app:hl_shadowColor="@color/bg_color_shadow"
                        app:hl_shadowLimit="@dimen/dp_10"
                        app:hl_topShow="false">

                        <RelativeLayout
                            android:id="@+id/mRelativeLayout_USDT"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_60">

                            <ImageView
                                android:id="@+id/mImageView_USDT"
                                android:layout_width="@dimen/dp_40"
                                android:layout_height="@dimen/dp_40"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dp_17"
                                android:layout_marginRight="@dimen/dp_13"
                                android:src="@mipmap/icon_usdt" />

                            <com.xw.aschwitkey.view.TypefaceTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/mImageView_USDT"
                                android:text="USDT"
                                android:textColor="@color/main4"
                                android:textSize="@dimen/sp_15"
                                app:typeface="medium" />

                            <com.xw.aschwitkey.view.TypefaceTextView
                                android:id="@+id/mTextView_USDT"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/dp_20"
                                android:text="？"
                                android:textColor="@color/main4"
                                android:textSize="@dimen/sp_15"
                                app:typeface="medium" />

                        </RelativeLayout>

