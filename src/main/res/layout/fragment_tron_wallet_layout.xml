                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <com.xw.aschwitkey.view.TypefaceTextView
                                        android:id="@+id/mTextView_available"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="？"
                                        android:textColor="@color/bg_red1"
                                        android:textSize="@dimen/sp_14"
                                        app:typeface="impact" />

                                    <com.xw.aschwitkey.view.TypefaceTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="可用"
                                        android:textColor="@color/text_bg_gray"
                                        android:textSize="@dimen/sp_12"
                                        app:typeface="regular" />

                                </LinearLayout>

                                <TextView
                                    android:layout_width="@dimen/dp_0_5"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="@dimen/dp_13"
                                    android:layout_marginBottom="@dimen/dp_13"
                                    android:background="@color/TextColor6" />

                                <LinearLayout
                                    android:id="@+id/mLinearLayout_locked"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <com.xw.aschwitkey.view.TypefaceTextView
                                        android:id="@+id/mTextView_freeze"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="？"
                                        android:textColor="@color/text_color_gray"
                                        android:textSize="@dimen/sp_14"
                                        app:typeface="impact" />

                                    <com.xw.aschwitkey.view.TypefaceTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="已冻结"
                                        android:textColor="@color/text_bg_gray"
                                        android:textSize="@dimen/sp_12"
                                        app:typeface="regular" />

                                </LinearLayout>

                            </LinearLayout>


                        </com.lihang.ShadowLayout>

                        <TextView
                            android:layout_width="@dimen/dp_0_5"
                            android:layout_height="@dimen/dp_30"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="@dimen/dp_7"
                            android:background="@color/white1" />
                    </RelativeLayout>

                    <RelativeLayout
