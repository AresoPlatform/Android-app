                                android:layout_width="0dp"
                                android:layout_height="@dimen/dp_65"
                                android:layout_weight="1"
                                android:background="@drawable/selector_btn_red_12dp_l"
                                android:gravity="center"
                                android:paddingTop="@dimen/dp_18"
                                android:text="转账"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_14"
                                app:typeface="medium" />

                            <com.xw.aschwitkey.view.TypefaceTextView
                                android:id="@+id/mTextView_btn_exchange"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/dp_65"
                                android:layout_weight="1"
                                android:background="@drawable/selector_btn_red_12dp_r"
                                android:gravity="center"
                                android:paddingTop="@dimen/dp_20"
                                android:text="ASO交易"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_14"
                                app:typeface="medium" />

                        </LinearLayout>

                        <com.lihang.ShadowLayout
                            android:id="@+id/mShadowLayout_top"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hl_cornerRadius="@dimen/dp_12"
                            app:hl_leftShow="false"
                            app:hl_rightShow="false"
                            app:hl_shadowColor="@color/bg_color_shadow"
                            app:hl_shadowLimit="@dimen/dp_10"
                            app:hl_topShow="false">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_50"
                                android:orientation="horizontal">

                                <LinearLayout
