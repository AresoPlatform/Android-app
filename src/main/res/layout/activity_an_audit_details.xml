<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_13"
    android:paddingRight="@dimen/dp_13"
    tools:context=".activity.AnAuditDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_color">

        <TextView
            android:id="@+id/mTextView_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/mImageView_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@mipmap/icon_back" />

        <com.xw.aschwitkey.view.TypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="公告审核"
            android:textColor="@color/text_bg_black"
            android:textSize="@dimen/sp_15"
            app:typeface="heavy" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/dp_17">

            <com.lihang.ShadowLayout
                android:id="@+id/mShadowLayout_cover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                app:hl_cornerRadius="@dimen/dp_12"
                app:hl_leftShow="false"
                app:hl_rightShow="false"
                app:hl_shadowColor="@color/bg_color_shadow"
                app:hl_shadowLimit="@dimen/dp_10"
                app:hl_topShow="false">

                <com.xw.aschwitkey.view.UpRoundImageView
                    android:id="@+id/mImageView_cover"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_133"
                    android:layout_marginTop="@dimen/dp_10"
                    android:scaleType="fitXY"
                    app:radius="@dimen/dp_12" />
            </com.lihang.ShadowLayout>

            <com.lihang.ShadowLayout
                android:id="@+id/mShadowLayout_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mShadowLayout_cover"
                android:layout_marginTop="@dimen/dp_7"
                app:hl_cornerRadius="@dimen/dp_12"
                app:hl_leftShow="false"
                app:hl_rightShow="false"
                app:hl_shadowColor="@color/bg_color_shadow"
                app:hl_shadowLimit="@dimen/dp_10"
                app:hl_topShow="false">

                <com.xw.aschwitkey.view.TypefaceTextView
                    android:id="@+id/mTextView_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_ed_background_white"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:minHeight="@dimen/dp_50"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:layout_marginRight="@dimen/dp_17"
                    android:textColor="@color/text_bg_black"
                    android:textSize="@dimen/sp_14"
                    app:typeface="heavy" />
            </com.lihang.ShadowLayout>

            <com.lihang.ShadowLayout
                android:id="@+id/mShadowLayout_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_below="@id/mShadowLayout_title"
                app:hl_cornerRadius="@dimen/dp_12"
                app:hl_leftShow="false"
                app:hl_rightShow="false"
                app:hl_shadowColor="@color/bg_color_shadow"
                app:hl_shadowLimit="@dimen/dp_10"
                app:hl_topShow="false">

                <com.xw.aschwitkey.view.TypefaceTextView
                    android:id="@+id/mTextView_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_ed_background_white"
                    android:minHeight="@dimen/dp_200"
                    android:padding="@dimen/dp_17"
                    android:textColor="@color/text_bg_black"
                    android:textSize="@dimen/sp_14"
                    app:typeface="heavy" />
            </com.lihang.ShadowLayout>

            <com.lihang.ShadowLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mShadowLayout_text"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_m_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_60"
                app:hl_cornerRadius="@dimen/dp_12"
                app:hl_leftShow="false"
                app:hl_rightShow="false"
                app:hl_shadowColor="@color/bg_color_shadow"
                app:hl_shadowLimit="@dimen/dp_10"
                app:hl_topShow="false">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20">

                    <com.xw.aschwitkey.view.TypefaceTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingTop="@dimen/dp_10"
                        android:text="审核投票"
                        android:textColor="@color/text_color_gray"
                        android:textSize="@dimen/sp_14"
                        app:typeface="heavy" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dp_15"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true">

                            <com.xw.aschwitkey.view.TypefaceTextView
                                android:id="@+id/mTextView_against"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@id/mTextView_line"
                                android:text="2"
                                android:textColor="@color/text_color_red"
                                android:textSize="@dimen/sp_14"
                                app:typeface="impact" />

                            <com.xw.aschwitkey.view.TypefaceTextView
                                android:id="@+id/mTextView_line"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@id/mTextView_agree"
                                android:text="/"
                                android:textColor="@color/text_bg_black"
                                android:textSize="@dimen/sp_14"
                                app:typeface="impact" />

                            <com.xw.aschwitkey.view.TypefaceTextView
                                android:id="@+id/mTextView_agree"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@id/mTextView_all"
                                android:text="4"
                                android:textColor="@color/text_bg"
                                android:textSize="@dimen/sp_14"
                                app:typeface="impact" />

                            <com.xw.aschwitkey.view.TypefaceTextView
                                android:id="@+id/mTextView_all"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:text="/6"
                                android:textColor="@color/text_bg_black"
                                android:textSize="@dimen/sp_14"
                                app:typeface="impact" />

                        </RelativeLayout>

                        <com.xw.aschwitkey.view.TypefaceTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:text="作废 / 通过 / 理事会成员"
                            android:textColor="@color/text_color_gray"
                            android:textSize="@dimen/sp_10"
                            app:typeface="medium" />
                    </LinearLayout>
                </RelativeLayout>
            </com.lihang.ShadowLayout>

            <com.lihang.ShadowLayout
                android:id="@+id/mShadowLayout_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_below="@id/mShadowLayout_content"
                app:hl_cornerRadius="@dimen/dp_12"
                app:hl_leftShow="false"
                app:hl_rightShow="false"
                app:hl_shadowColor="@color/bg_color_shadow"
                app:hl_shadowLimit="@dimen/dp_10"
                app:hl_topShow="false">

                <com.xw.aschwitkey.view.TypefaceTextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:gravity="center"
                    android:text="审核投票：通过率达到三分之二即可通过审核并发布。"
                    android:textColor="@color/text_color_red"
                    android:textSize="@dimen/sp_11"
                    app:face="heavy" />
            </com.lihang.ShadowLayout>

            <LinearLayout
                android:id="@+id/mLinearLayout_bottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/dp_7"
                android:orientation="horizontal">

                <com.xw.aschwitkey.view.TypefaceTextView
                    android:id="@+id/mTextView_btn_invalid"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dp_14"
                    android:layout_weight="1"
                    android:background="@drawable/selector_btn_red"
                    android:gravity="center"
                    android:text="作废"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    app:typeface="heavy" />

                <com.xw.aschwitkey.view.TypefaceTextView
                    android:id="@+id/mTextView_btn_through"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_button_transfer"
                    android:gravity="center"
                    android:text="通过"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    app:typeface="heavy" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>