<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog_background_white_top"
    android:orientation="vertical">

    <com.lihang.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hl_cornerRadius_leftBottom="0dp"
        app:hl_cornerRadius_leftTop="@dimen/dp_24"
        app:hl_cornerRadius_rightBottom="0dp"
        app:hl_cornerRadius_rigthTop="@dimen/dp_24"
        app:hl_leftShow="false"
        app:hl_rightShow="false"
        app:hl_shadowColor="@color/bg_color_shadow"
        app:hl_shadowLimit="@dimen/dp_10"
        app:hl_topShow="false">

        <com.xw.aschwitkey.view.TypefaceTextView
            android:id="@+id/mTextView_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center"
            android:text="设置交易密码"
            android:textColor="@color/text_bg_black"
            android:textSize="@dimen/sp_15"
            app:typeface="heavy" />

    </com.lihang.ShadowLayout>

    <com.xw.aschwitkey.view.TypefaceEditText
        android:id="@+id/mEditText_originalPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_marginRight="@dimen/dp_17"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/shape_ed_background"
        android:hint="原交易密码"
        android:inputType="textPassword"
        android:maxLength="6"
        android:paddingLeft="@dimen/dp_17"
        android:paddingRight="@dimen/dp_17"
        android:textColor="@color/text_bg"
        android:textSize="@dimen/sp_14"
        app:face="heavy" />

    <com.xw.aschwitkey.view.TypefaceEditText
        android:id="@+id/mEditText_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_marginRight="@dimen/dp_17"
        android:background="@drawable/shape_ed_background"
        android:hint="交易密码"
        android:inputType="textPassword"
        android:maxLength="6"
        android:paddingLeft="@dimen/dp_17"
        android:paddingRight="@dimen/dp_17"
        android:textColor="@color/text_bg"
        android:textSize="@dimen/sp_14"
        app:face="heavy" />

    <com.xw.aschwitkey.view.TypefaceTextView
        android:id="@+id/mTextView_err"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_4"
        android:text="交易密码必须为六位且包含字母和数字"
        android:textColor="@color/text_color_red"
        android:textSize="@dimen/sp_11"
        android:visibility="invisible"
        app:typeface="heavy" />

    <com.xw.aschwitkey.view.TypefaceEditText
        android:id="@+id/mEditText_confirmPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_marginRight="@dimen/dp_17"
        android:background="@drawable/shape_ed_background"
        android:hint="确认交易密码"
        android:inputType="textPassword"
        android:maxLength="6"
        android:paddingLeft="@dimen/dp_17"
        android:paddingRight="@dimen/dp_17"
        android:textColor="@color/text_bg"
        android:textSize="@dimen/sp_14"
        app:face="heavy" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_17"
        android:layout_marginRight="@dimen/dp_17">

        <com.xw.aschwitkey.view.TypefaceEditText
            android:id="@+id/mEditText_verification"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_ed_background"
            android:gravity="center_vertical"
            android:hint="验证码"
            android:inputType="number"
            android:paddingLeft="@dimen/dp_20"
            android:textColor="@color/text_bg_black"
            android:textColorHint="@color/text_color_gray"
            android:textSize="@dimen/sp_15"
            app:face="heavy" />

        <com.xw.aschwitkey.view.TypefaceTextView
            android:id="@+id/mTextView_getCode"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/text_bg"
            android:textSize="@dimen/sp_15"
            app:typeface="heavy" />
    </RelativeLayout>

    <com.xw.aschwitkey.view.TypefaceTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_17"
        android:gravity="center"
        android:text="删除或卸载希客APP将造成导入或新建账户的私钥全部丢失，请自行备份"
        android:textColor="@color/text_color_red"
        android:textSize="@dimen/sp_12"
        app:typeface="regular" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_margin="@dimen/dp_17"
        android:orientation="horizontal">

        <com.xw.aschwitkey.view.TypefaceTextView
            android:id="@+id/mTextView_btn_cancel"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_7"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_red"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            app:typeface="heavy" />

        <com.xw.aschwitkey.view.TypefaceTextView
            android:id="@+id/mTextView_btn_determine"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_7"
            android:layout_weight="1"
            android:background="@drawable/selector_button_transfer"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            app:typeface="heavy" />
    </LinearLayout>

</LinearLayout>
