<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.xw.aschwitkey.view.TypefaceTextView
        android:id="@+id/mTextView_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:text="上午 11:00"
        android:textColor="@color/TextColor1"
        android:textSize="@dimen/sp_11"
        android:visibility="gone"
        app:typeface="regular" />

    <LinearLayout
        android:id="@+id/mLinearLayout_you"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_56"
        android:orientation="horizontal"
        android:visibility="gone">

        <com.xw.aschwitkey.view.CircleImageView
            android:id="@+id/mImageView_youHead"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_13"
            android:src="@mipmap/asch_logo" />

        <com.xw.aschwitkey.view.TypefaceTextView
            android:id="@+id/mTextView_you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:background="@drawable/shape_white_radius_8dp"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_5"
            android:text="你发给我的消息"
            android:textColor="@color/text_bg_gray"
            android:textIsSelectable="true"
            android:textSize="@dimen/sp_14"
            app:typeface="regular" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/mRelativeLayout_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_56"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_13"
        android:visibility="gone">

        <com.xw.aschwitkey.view.TypefaceTextView
            android:id="@+id/mTextView_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/mImageView_meHead"
            android:autoLink="web"
            android:background="@drawable/shape_blue_radius_8dp"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_5"
            android:text="我发给你的消息"
            android:textColor="@color/white"
            android:textIsSelectable="true"
            android:textSize="@dimen/sp_14"
            app:typeface="regular" />

        <com.xw.aschwitkey.view.CircleImageView
            android:id="@+id/mImageView_meHead"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_13"
            android:src="@mipmap/asch_logo" />
    </RelativeLayout>

    <TextView
        android:id="@+id/mTextView_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:visibility="gone" />
</LinearLayout>
