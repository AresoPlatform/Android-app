<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_7"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/mRelativeLayout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.lihang.ShadowLayout
            android:id="@+id/mShadowLayout_withdrawal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mShadowLayout_top"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_m_30"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_marginBottom="@dimen/dp_7"
            android:visibility="gone"
            app:hl_cornerRadius="@dimen/dp_12"
            app:hl_leftShow="false"
            app:hl_rightShow="false"
            app:hl_shadowColor="@color/bg_color_shadow"
            app:hl_shadowLimit="@dimen/dp_10"
            app:hl_topShow="false">

            <com.xw.aschwitkey.view.TypefaceTextView
                android:id="@+id/mTextView_withdrawal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:background="@drawable/selector_btn_red"
                android:gravity="center"
                android:paddingTop="@dimen/dp_15"
                android:text="提现分红余额"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                app:typeface="heavy" />

        </com.lihang.ShadowLayout>

        <com.lihang.ShadowLayout
            android:id="@+id/mShadowLayout_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hl_cornerRadius="@dimen/dp_12"
            app:hl_leftShow="false"
            app:hl_rightShow="false"
            app:hl_shadowColor="@color/bg_color_shadow"
            app:hl_shadowLimit="@dimen/dp_10"
            app:hl_topShow="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.lihang.ShadowLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hl_cornerRadius="@dimen/dp_12"
                    app:hl_leftShow="false"
                    app:hl_rightShow="false"
                    app:hl_shadowColor="@color/bg_color_shadow"
                    app:hl_shadowLimit="@dimen/dp_10"
                    app:hl_topShow="false">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50">

                        <com.xw.aschwitkey.view.TypefaceTextView
                            android:id="@+id/mTextView_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_17"
                            android:textColor="@color/text_bg"
                            android:textSize="@dimen/sp_14"
                            app:typeface="heavy" />

                        <com.xw.aschwitkey.view.TypefaceTextView
                            android:id="@+id/mTextView_time_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/mTextView_time"
                            android:textColor="@color/text_color_red"
                            android:textSize="@dimen/sp_12"
                            app:typeface="heavy" />

                        <com.xw.aschwitkey.view.TypefaceTextView
                            android:id="@+id/mTextView_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/mImageView_operation"
                            android:textColor="@color/text_color_red"
                            android:textSize="@dimen/sp_12"
                            app:typeface="heavy" />

                        <ImageView
                            android:id="@+id/mImageView_operation"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/caozuo" />

                    </RelativeLayout>
                </com.lihang.ShadowLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_17"
                    android:paddingRight="@dimen/dp_17">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginTop="@dimen/dp_7"
                        android:background="@drawable/shape_ed_background"
                        android:paddingLeft="@dimen/dp_13"
                        android:paddingRight="@dimen/dp_13">

                        <com.xw.aschwitkey.view.TypefaceTextView
                            android:id="@+id/mTextView_allMany_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:text="已购基金"
                            android:textColor="@color/text_color_gray"
                            android:textSize="@dimen/sp_14"
                            app:face="heavy" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                            <com.xw.aschwitkey.view.TypefaceTextView
                                android:id="@+id/mTextView_allMany"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="30000000"
                                android:textColor="@color/text_bg_black"
                                android:textSize="@dimen/sp_14"
                                app:typeface="impact" />

                            <com.xw.aschwitkey.view.TypefaceTextView
                                android:id="@+id/mTextView_allMany_many"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dp_2"
                                android:text="30000×1000"
                                android:textColor="@color/main1"
                                android:textSize="@dimen/sp_10"
                                app:typeface="impact" />

                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginTop="@dimen/dp_17"
                        android:background="@drawable/shape_ed_background"
                        android:paddingLeft="@dimen/dp_13"
                        android:paddingRight="@dimen/dp_13">

                        <com.xw.aschwitkey.view.TypefaceTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:text="分红利率"
                            android:textColor="@color/text_color_gray"
                            android:textSize="@dimen/sp_14"
                            app:face="heavy" />

                        <com.xw.aschwitkey.view.TypefaceTextView
                            android:id="@+id/mTextView_fundsRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="10%"
                            android:textColor="@color/text_bg_black"
                            android:textSize="@dimen/sp_14"
                            app:typeface="impact" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginTop="@dimen/dp_17"
                        android:layout_marginBottom="@dimen/dp_17"
                        android:background="@drawable/shape_ed_background"
                        android:paddingLeft="@dimen/dp_13"
                        android:paddingRight="@dimen/dp_13">

                        <com.xw.aschwitkey.view.TypefaceTextView
                            android:id="@+id/mTextView_totalAmount_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:text="本息总额"
                            android:textColor="@color/text_color_gray"
                            android:textSize="@dimen/sp_14"
                            app:face="heavy" />

                        <com.xw.aschwitkey.view.TypefaceTextView
                            android:id="@+id/mTextView_sellAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/mTextView_totalAmount"
                            android:text="1"
                            android:textColor="@color/text_bg"
                            android:textSize="@dimen/sp_14"
                            app:typeface="impact" />

                        <com.xw.aschwitkey.view.TypefaceTextView
                            android:id="@+id/mTextView_totalAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="/33000000"
                            android:textColor="@color/text_bg_black"
                            android:textSize="@dimen/sp_14"
                            app:typeface="impact" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </com.lihang.ShadowLayout>
    </RelativeLayout>
</RelativeLayout>
