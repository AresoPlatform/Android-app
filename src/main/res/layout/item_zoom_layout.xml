<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_13"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/mRelativeLayout_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_400"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10">

        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.xw.aschwitkey.view.TypefaceTextView
            android:id="@+id/mTextView_indicator"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_13"
            android:background="@drawable/shape_indicator"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_5"
            android:text="1/3"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10"
            app:typeface="heavy" />

        <com.xw.aschwitkey.view.TypefaceTextView
            android:id="@+id/mTextView_location"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_25"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_13"
            android:background="@drawable/selector_button_location"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="@dimen/dp_13"
            android:paddingRight="@dimen/dp_13"
            android:text="成都市·植物园"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10"
            app:typeface="heavy"
            android:visibility="gone"/>
    </RelativeLayout>

    <com.xw.aschwitkey.view.TypefaceTextView
        android:id="@+id/mTextView_content"
        style="@style/defaultTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:autoLink="web"
        android:textColor="@color/text_bg_gray"
        android:textSize="@dimen/sp_13"/>

</LinearLayout>
