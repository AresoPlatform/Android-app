<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_17"
    android:layout_marginRight="@dimen/dp_17">

    <com.xw.aschwitkey.view.TypefaceTextView
        android:id="@+id/mTextView_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/text_bg_gray"
        android:textSize="@dimen/sp_13"
        app:typeface="heavy" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true">

        <com.xw.aschwitkey.view.TypefaceTextView
            android:id="@+id/mTextView_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="@color/text_color_golden"
            android:textSize="@dimen/sp_13"
            app:typeface="impact" />

        <com.xw.aschwitkey.view.TypefaceTextView
            android:id="@+id/mTextView_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/text_bg_gray"
            app:typeface="regular"
            />

    </LinearLayout>

</RelativeLayout>
