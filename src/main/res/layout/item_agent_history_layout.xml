<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_3"
    android:paddingLeft="@dimen/dp_13"
    android:paddingRight="@dimen/dp_13">

    <com.lihang.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hl_cornerRadius="@dimen/dp_12"
        app:hl_leftShow="false"
        app:hl_rightShow="false"
        app:hl_shadowColor="@color/bg_color_shadow"
        app:hl_shadowLimit="@dimen/dp_10"
        app:hl_topShow="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_13">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.xw.aschwitkey.view.TypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点赞次数"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/sp_13"
                    app:typeface="medium" />

                <com.xw.aschwitkey.view.TypefaceTextView
                    android:id="@+id/mTextView_voteNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="+ 12"
                    android:textColor="@color/text_color_green"
                    android:textSize="@dimen/sp_13"
                    app:typeface="impact" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_17">

                <com.xw.aschwitkey.view.TypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发帖次数"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/sp_13"
                    app:typeface="medium" />

                <com.xw.aschwitkey.view.TypefaceTextView
                    android:id="@+id/mTextView_postNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="+ 12"
                    android:textColor="@color/text_color_green"
                    android:textSize="@dimen/sp_13"
                    app:typeface="impact" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_17">

                <com.xw.aschwitkey.view.TypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="冻结xas"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/sp_13"
                    app:typeface="medium" />

                <com.xw.aschwitkey.view.TypefaceTextView
                    android:id="@+id/mTextView_freeze"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="- 200 xas"
                    android:textColor="@color/text_bg_gray"
                    android:textSize="@dimen/sp_13"
                    app:typeface="heavy" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_17">

                <com.xw.aschwitkey.view.TypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xas冻结时间"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/sp_13"
                    app:typeface="medium" />

                <com.xw.aschwitkey.view.TypefaceTextView
                    android:id="@+id/mTextView_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="07/07 09:48"
                    android:textColor="@color/TextColor1"
                    android:textSize="@dimen/sp_11"
                    app:typeface="regular" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_17">

                <com.xw.aschwitkey.view.TypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xas解冻时间"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/sp_13"
                    app:typeface="medium" />

                <com.xw.aschwitkey.view.TypefaceTextView
                    android:id="@+id/mTextView_endTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="07/07 09:48"
                    android:textColor="@color/TextColor1"
                    android:textSize="@dimen/sp_11"
                    app:typeface="regular" />

            </RelativeLayout>

        </LinearLayout>

    </com.lihang.ShadowLayout>

</RelativeLayout>
