    <com.lihang.ShadowLayout
        android:id="@+id/mShadowLayout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hl_cornerRadius="@dimen/dp_12"
        app:hl_leftShow="false"
        app:hl_rightShow="false"
        app:hl_shadowColor="@color/bg_color_shadow"
        app:hl_shadowLimit="@dimen/dp_10"
        app:hl_topShow="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_17"
            android:paddingRight="@dimen/dp_17">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.xw.aschwitkey.view.TypefaceTextView
                            android:id="@+id/mTextView_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="基金第三期"
                            android:textColor="@color/text_bg_black"
                            android:textSize="@dimen/sp_14"
                            app:typeface="heavy" />

                        <com.xw.aschwitkey.view.TypefaceTextView
                            android:id="@+id/mTextView_type"
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="@dimen/dp_20"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_12"
                            android:layout_toRightOf="@id/mTextView_name"
                            android:background="@drawable/shape_bg_red"
                            android:gravity="center"
                            android:text="认购中"
                            android:textColor="@color/text_color_red"
                            android:textSize="@dimen/sp_12"
                            app:typeface="medium" />
                    </RelativeLayout>

                    <com.xw.aschwitkey.view.TypefaceTextView
                        android:id="@+id/mTextView_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@drawable/shape_bg_red_stroke"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_5"
                        android:text="分红利率：10%、邀请利率：10%"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_11"
                        app:typeface="medium" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <com.xw.aschwitkey.view.TypefaceTextView
                        android:id="@+id/mTextView_btn"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_30"
                        android:layout_gravity="right"
                        android:background="@drawable/selector_btn_red_type"
                        android:gravity="center"
                        android:text="认购"
                        android:textColor="@color/text_color_red"
                        android:textSize="@dimen/sp_12"
                        app:typeface="medium" />

                    <com.xw.aschwitkey.view.TypefaceTextView
                        android:id="@+id/mTextView_sellAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_3"
                        android:text="已认购10份"
                        android:textColor="@color/text_color_gray"
                        android:textSize="@dimen/sp_11"
                        app:typeface="regular" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_17">

                <com.xw.aschwitkey.view.TypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="认购单价"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/sp_13"
                    app:typeface="medium" />

                <com.xw.aschwitkey.view.TypefaceTextView
                    android:id="@+id/mTextView_fundShareAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="1000 xas"
                    android:textColor="@color/text_color_golden"
                    android:textSize="@dimen/sp_13"
                    app:typeface="medium" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_17">

                <com.xw.aschwitkey.view.TypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="认购剩余份数"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/sp_13"
                    app:typeface="medium" />

                <com.xw.aschwitkey.view.TypefaceTextView
                    android:id="@+id/mTextView_fundRemaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="1000 份"
                    android:textColor="@color/text_bg_gray"
                    android:textSize="@dimen/sp_13"
                    app:typeface="medium" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_17">

                <com.xw.aschwitkey.view.TypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="认购结束时间"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/sp_13"
                    app:typeface="medium" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <com.xw.aschwitkey.view.TypefaceTextView
                        android:id="@+id/mTextView_endTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_5"
                        android:textColor="@color/text_bg_gray"
                        android:textSize="@dimen/sp_13"
                        app:typeface="medium" />

                    <LinearLayout
                        android:id="@+id/mLinearLayout_endDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.xw.aschwitkey.view.TypefaceTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="剩 "
                            android:textColor="@color/text_color_gray"
                            android:textSize="@dimen/sp_13"
                            app:typeface="medium" />

                        <com.xw.aschwitkey.view.TypefaceTextView
                            android:id="@+id/mTextView_endDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color_red"
                            android:textSize="@dimen/sp_13"
                            app:typeface="medium" />

                        <com.xw.aschwitkey.view.TypefaceTextView
                            android:id="@+id/mTextView_endText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color_gray"
                            android:textSize="@dimen/sp_13"
                            app:typeface="medium" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_marginBottom="@dimen/dp_20">

                <com.xw.aschwitkey.view.TypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本息领取时间"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/sp_13"
                    app:typeface="medium" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <com.xw.aschwitkey.view.TypefaceTextView
                        android:id="@+id/mTextView_fundStartAccrual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_5"
                        android:textColor="@color/text_bg_gray"
                        android:textSize="@dimen/sp_13"
                        app:typeface="medium" />

                    <LinearLayout
                        android:id="@+id/mLinearLayout_accrualDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.xw.aschwitkey.view.TypefaceTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="剩 "
                            android:textColor="@color/text_color_gray"
                            android:textSize="@dimen/sp_13"
                            app:typeface="medium" />

                        <com.xw.aschwitkey.view.TypefaceTextView
                            android:id="@+id/mTextView_accrualDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color_red"
                            android:textSize="@dimen/sp_13"
                            app:typeface="medium" />

                        <com.xw.aschwitkey.view.TypefaceTextView
                            android:id="@+id/mTextView_accrualText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color_gray"
                            android:textSize="@dimen/sp_13"
                            app:typeface="medium" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </com.lihang.ShadowLayout>
</RelativeLayout>
