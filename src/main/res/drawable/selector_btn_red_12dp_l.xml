<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">

            <solid android:color="#b2ff5f5f" />

            <corners android:topLeftRadius="@dimen/dp_12" android:bottomLeftRadius="@dimen/dp_12" android:bottomRightRadius="0dp" android:topRightRadius="0dp"/>

        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">

            <solid android:color="@color/bg_red1" />

            <corners android:topLeftRadius="@dimen/dp_12" android:bottomLeftRadius="@dimen/dp_12" android:bottomRightRadius="0dp" android:topRightRadius="0dp"/>

        </shape>
    </item>

</selector>